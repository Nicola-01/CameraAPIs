<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".PopUpFragment">


    <TextView
        android:id="@+id/TV_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Permessi"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/TV_text"
        app:layout_constraintStart_toStartOf="@+id/TV_text"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BT_closePopUp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Chiudi"
        app:layout_constraintStart_toStartOf="@+id/TV_text"
        app:layout_constraintTop_toBottomOf="@+id/TV_text" />

    <Button
        android:id="@+id/BT_settingsPopUp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Impostazioni"
        app:layout_constraintEnd_toEndOf="@+id/TV_text"
        app:layout_constraintTop_toBottomOf="@+id/TV_text" />

    <TextView
        android:id="@+id/TV_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="2dp"
        android:text="@string/PermissionText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_permission" />
</androidx.constraintlayout.widget.ConstraintLayout>