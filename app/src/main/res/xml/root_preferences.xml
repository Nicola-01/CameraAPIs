<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="Impostazioni Tasti"
        app:iconSpaceReserved="false">

        <ListPreference
            android:defaultValue="zoom"
            android:entries="@array/volumeKey_entries"
            android:entryValues="@array/volumeKey_values"
            android:key="LS_volumeKey"
            android:title="Tasti Volume"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Foto"
        app:iconSpaceReserved="false">

        <ListPreference
            android:defaultValue="3_4"
            android:entries="@array/ratio_entries"
            android:entryValues="@array/ratio_values"
            android:key="LS_ratioPhoto"
            android:title="Rapporto Foto"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Video"
        app:iconSpaceReserved="false">

        <ListPreference
            android:defaultValue="3_4"
            android:entries="@array/ratio_entries"
            android:entryValues="@array/ratio_values"
            android:key="LS_ratioVideo"
            android:title="Rapporto Video"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            android:defaultValue="UHD"
            android:entries="@array/videoQuality_entries"
            android:entryValues="@array/videoQuality_values"
            android:key="LS_videoResolution"
            android:title="Risoluzione Video"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Generali"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:defaultValue="true"
            android:key="SW_grid"
            app:iconSpaceReserved="false"
            android:title="Griglia" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="SW_HDR"
            app:iconSpaceReserved="false"
            android:title="HDR" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="SW_GPS"
            app:iconSpaceReserved="false"
            android:title="GPS" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="SW_feedback"
            app:iconSpaceReserved="false"
            android:title="Feedback vibrazione" />
    </PreferenceCategory>

</PreferenceScreen>